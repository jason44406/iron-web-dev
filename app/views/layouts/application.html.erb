  <body>
    <nav class="navbar bg-dark navbar-dark navbar-expand-sm header_bg">
      <div class="container">
        <div class="navbar-brand">Iron Web Development</div>
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="#">Home</a>
            <a class="nav-item nav-link" href="#">Design</a>
            <a class="nav-item nav-link" href="#">Administration</a>
            <a class="nav-item nav-link" href="#">Other Projects</a>
            <a class="nav-item nav-link" href="#">About us</a>
        </div><!-- navbar-nav -->
      </div><!-- container -->
    </nav>

    <%= yield %>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
